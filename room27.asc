      player.Say("Da lässt sich nichts drücken.");
    }
    else if (UsedAction(eActUseInventory))
    {
      Wait(5);
      if (player.ActiveInventory == iHandschuh) player.Say("Den habe ich doch erst dort rausgefischt.");
      else player.Say("Den Gegenstand möchte ich nicht wegschmeißen.");
    }
    else Unhandled();
  }
}
