function room_RepExec()
{
	if ( Credits[0].IsRunning()==eCreditFinished )
	{
		//Wait(40);
		//QuitGame(0);
    Speech.SkipStyle=eSkipKeyMouse;   
    cNoChar.SpeechColor=59008; 
    cNoChar.SayBackground("ENDE");
    if (Mouse.IsButtonDown(eMouseLeft) || IsKeyPressed(eKeyEscape) )
      QuitGame(0);    
	}
}

