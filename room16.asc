/****************************
*   Raum-Funktionen
****************************/
function room_Load()
{ 
  gMaingui.Visible=false; gAction.Visible=false;
  SetRoomObjTranslated(4);
  SetRoomObjTranslated(5);
  SetRoomObjTranslated(6); 
}

function room_Leave()
{
  gMaingui.Visible=true; gAction.Visible=true;
}

